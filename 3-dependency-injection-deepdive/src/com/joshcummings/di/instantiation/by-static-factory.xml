<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">
    
    <bean id="numberGenerator"
    	class="com.joshcummings.di.instantiation.PrimeNumberGenerator" factory-method="withPrimes">
        <constructor-arg>
            <list>
                <value>7</value>
                <value>17</value>
            </list>
        </constructor-arg>
    </bean>

    <!--  constructor-arg means "parameter necessary for construction", not precisely "parameter to go into a constructor" -->
</beans>