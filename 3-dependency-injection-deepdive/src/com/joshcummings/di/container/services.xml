<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- services -->

    <bean id="gumballMachineService" 
    	class="com.joshcummings.di.gumballs.GumballMachineService">
        <property name="machineDao" 
        	ref="gumballMachineDao"/>
        <property name="keyDao" 
        	ref="machineKeyDao"/>
        <property name="purchaseService" 
        	ref="purchaseService"/>
        <!-- additional collaborators and configuration for this bean go here -->
    </bean>

    <!-- Add the bean definition for the purchase service -->
	<bean id="purchaseService"
		class="com.joshcummings.di.gumballs.PurchaseService"/>
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
</beans>